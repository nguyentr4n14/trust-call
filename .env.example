# Voice Scam Shield Environment Configuration

# =============================================================================
# API Keys and External Services
# =============================================================================

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# ElevenLabs TTS Configuration
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# Deepgram API Configuration (Alternative ASR)
DEEPGRAM_API_KEY=your_deepgram_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

DATABASE_URL=postgresql://scam_shield:password@localhost:5432/scam_shield_db
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Backend Configuration
# =============================================================================

# FastAPI Settings
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DEBUG=true
SECRET_KEY=your_super_secret_key_here_change_in_production

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# =============================================================================
# Frontend Configuration
# =============================================================================

REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_ENVIRONMENT=development

# =============================================================================
# AI Pipeline Configuration
# =============================================================================

# Model Paths and Configuration
WHISPER_MODEL_SIZE=base
ANTI_SPOOFING_MODEL_PATH=./models/anti_spoofing/
SCAM_DETECTION_MODEL_PATH=./models/scam_detection/

# Detection Thresholds
SCAM_DETECTION_THRESHOLD=0.7
ANTI_SPOOFING_THRESHOLD=0.5
CONFIDENCE_THRESHOLD=0.6

# Audio Processing
SAMPLE_RATE=16000
CHUNK_DURATION_MS=1000
MAX_AUDIO_BUFFER_SIZE=10000

# =============================================================================
# Monitoring and Logging
# =============================================================================

LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here
PROMETHEUS_PORT=9090

# =============================================================================
# Supported Languages
# =============================================================================

SUPPORTED_LANGUAGES=["en", "es", "fr"]
DEFAULT_LANGUAGE=en

# =============================================================================
# Security Settings
# =============================================================================

JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
MAX_CONCURRENT_CONNECTIONS=50

# =============================================================================
# Feature Flags
# =============================================================================

ENABLE_CALLER_VERIFICATION=false
ENABLE_INCIDENT_REPORTS=true
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_VOICE_MATCHING=false
